{
  "name": "sr79-main",
  "version": "0.0.0",
  "description": "Main Personal Server",
  "license": "ISC",
  "author": "Kunal Sharma",
  "type": "module",
  "main": "main.ts",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node src/main.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/main.ts",
    "build:prod": "tsc --outDir dist",
    "prod": "NODE_ENV=production npm run build:prod && node dist/main.js"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "dotenv": "^17.2.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
